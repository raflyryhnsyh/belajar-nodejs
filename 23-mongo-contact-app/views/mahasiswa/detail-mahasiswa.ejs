<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Mahasiswa</h2>

            <% if (!mahasiswa) { %>
                
                <div class="alert alert-danger fw-bold" role="alert">
                    Data Contact Tidak Ada! <br />
                    <a href="/mahasiswa" class="alert-link fw-normal">&laquo; kembali ke daftar mahasiswa</a>
                </div>

            <% } else { %>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                      <h5 class="card-title"><%= mahasiswa.nama %></h5>
                      <h6 class="card-subtitle mb-2 text-body-secondary"><%= mahasiswa.nohp %></h6>
                      <p class="card-text"><%= mahasiswa.email %></p>
                      <a href="/mahasiswa/edit/<%= mahasiswa.nama %>" class="btn btn-info badge" >edit mahasiswa</a><br>
                      <a href="/mahasiswa/delete/<%= mahasiswa.nama %>" class="btn btn-danger badge mt-3" onclick="return confirm('Yakin?');">hapus mahasiswa</a>
                      <a href="/mahasiswa" class="card-link d-block mt-3">&laquo; Kembali ke daftar mahasiswa</a>
                    </div>
                </div>
            <% } %>

        </div>
    </div>
</div>